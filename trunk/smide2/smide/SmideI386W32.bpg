#------------------------------------------------------------------------------
VERSION = BWS.01
#------------------------------------------------------------------------------
!ifndef ROOT
ROOT = $(MAKEDIR)\..
!endif
#------------------------------------------------------------------------------
MAKE = $(ROOT)\bin\make.exe -$(MAKEFLAGS) -f$**
DCC = $(ROOT)\bin\dcc32.exe $**
BRCC = $(ROOT)\bin\brcc32.exe $**
#------------------------------------------------------------------------------
PROJECTS = SmideSystem.bpl SmideSystemRuntime.bpl
#------------------------------------------------------------------------------
default: $(PROJECTS)
#------------------------------------------------------------------------------

SmideSystem.bpl: src\smide\packages\i386\SmideSystem.dpk
  $(DCC)

SmideSystemRuntime.bpl: src\smide\packages\i386\win32\SmideSystemRuntime.dpk
  $(DCC)


